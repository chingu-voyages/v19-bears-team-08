extends ../layout.pug

block content
  div
    h3 Hello #{name},
    p Thank you for creating a Chingu account.
    p Please confirm this is your email address by clicking on the button below.

  - const baseURL = process.env.NODE_ENV === "production" ? "https://chingudashboard.herokuapp.com" : "http://localhost:3000"
  a.styled-button(
    href=baseURL + '/verify/user/'+ token 
    target='_blank'
  ) Verify Your Email